<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FirebaseAuthTheme" parent="FirebaseUI">
        <!-- Required standard AppCompat colors -->
        <item name="titleTextColor">#000000</item>
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#2b2b2b</item>
        <item name="colorAccent">@color/colorPantone2</item>

        <item name="colorControlNormal">@color/colorPantone3</item>
        <item name="colorControlActivated">@color/colorPantone3</item>
        <item name="colorControlHighlight">@color/colorPantone1</item>
        <!--<item name="colorControlHighlight">#009688</item>-->
        <item name="android:windowBackground">@color/background</item>
    </style>


</resources>
